<p id="notice"><%= notice %></p>

<h1>Listing Bug Resolutions</h1>

<table>
  <thead>
    <tr>
      <th>Timestamp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bug_resolutions.each do |bug_resolution| %>
      <tr>
        <td><%= bug_resolution.timestamp %></td>
        <td><%= link_to 'Show', bug_resolution %></td>
        <td><%= link_to 'Edit', edit_bug_resolution_path(bug_resolution) %></td>
        <td><%= link_to 'Destroy', bug_resolution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

