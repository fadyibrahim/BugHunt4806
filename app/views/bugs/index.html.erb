<div style="padding:20px;margin-top:30px;background-color:#1abc9c;height:1500px;">
<p id="notice"><%= notice %></p>

<h1>Listing Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Points</th>
      <th>Completed</th>
      <th>Url</th>
      <th>Created</th>
      <th>Hunt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.name %></td>
        <td><%= bug.points %></td>
        <td><%= bug.completed %></td>
        <td><%= bug.url %></td>
        <td><%= bug.created %></td>
        <td><%= bug.hunt_id %></td>
        <td><%= link_to 'Show', bug %></td>
        <!--<td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

